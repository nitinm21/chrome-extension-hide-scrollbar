{
  "manifest_version": 2,
  "name": "Hide Scroll Bar",
  "version": "1.0",
  "description": "Hide the scroll bar when the ESC key is pressed.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
